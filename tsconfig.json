{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "types": [ "node" ],
    "target": "es2018",
    "lib": ["ESNext.BigInt"],
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": false,
    "alwaysStrict": false,
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/**/*.ts",
    "src/definition/**/*.ts",
    "**/*.js",
    "test/"
  ]
}